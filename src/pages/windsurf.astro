---
import Layout from '../layouts/Layout.astro';
import { withBase } from '../utils/url';

const hero = {
  title: 'Windsurf',
  subtitle: 'Planifiez vos runs pleine vitesse avec la collection AHD Windsurf.',
  image: withBase('/images/ahd-apex.jpg')
};

const facets = [
  {
    label: 'Taille',
    options: ['82 L', '95 L', '102 L', '115 L']
  },
  {
    label: 'Couleur',
    options: ['Atlantic Blue', 'Carbon Black', 'Sunset Red']
  },
  {
    label: 'Prix',
    options: ['-500 €', '500 € - 800 €', '+800 €']
  }
];

const boards = [
  {
    slug: 'fury',
    name: 'Fury',
    description: 'Shape freeride nerveux, idéal pour dompter les plans d’eau clapoteux.',
    volume: '95 L',
    price: '1849 €',
    image: withBase('/images/boards/ahd-fury.png')
  },
  {
    slug: 'zen',
    name: 'Zen',
    description: 'Glisse ultra stable pour enchainer les jibes toute la journée.',
    volume: '115 L',
    price: '949 €',
    image: withBase('/images/boards/ahd-zen.png')
  },
  {
    slug: 'sls',
    name: 'SL-S',
    description: 'Version slalom pure pensée pour accélérer dès la relance.',
    volume: '102 L',
    price: '1549 €',
    image: withBase('/images/boards/AHD_SLS.png')
  },
  {
    slug: 'compact-foil',
    name: 'Compact Foil',
    description: 'Carène compacte et portance rapide pour des envols précoces.',
    volume: '82 L',
    price: '1249 €',
    image: withBase('/images/boards/ahd-compact-foil.png')
  }
];
---

<Layout title="AHD Paddle | Windsurf">
  <main class="pb-24">
    <section
      class="relative flex min-h-[70vh] items-center justify-center overflow-hidden text-center"
      data-bg="#ffffff"
      data-nav="dark"
      style={`background-image: url('${hero.image}'); background-size: cover; background-position: center;`}
    >
      <div class="absolute inset-0 bg-white/12"></div>
      <div class="absolute inset-0 bg-gradient-to-b from-white/10 via-transparent to-midnight/65"></div>
      <div class="relative z-10 max-w-2xl space-y-6 px-6 hero-copy-shadow">
        <p class="text-sm uppercase tracking-[0.4em] text-foam/70">Collection 2026</p>
        <h1 class="text-4xl md:text-6xl font-black text-white">{hero.title}</h1>
        <p class="text-base md:text-lg text-foam/80">{hero.subtitle}</p>
      </div>
    </section>

    <section class="bg-white pt-12 lg:pt-16" data-bg="#ffffff" data-nav="light">
      <div class="container space-y-10 text-midnight">
        <nav aria-label="Fil d’Ariane" class="flex items-center gap-2 text-sm text-midnight/60">
          <a href={withBase('/')} class="font-medium text-midnight/70 transition-colors duration-200 hover:text-midnight">Accueil</a>
          <span class="text-midnight/30">/</span>
          <span class="text-midnight font-semibold">{hero.title}</span>
        </nav>
        <div class="space-y-6 text-center">
          <h2 class="section-title text-3xl md:text-4xl">Planches de course</h2>
          <p class="mx-auto max-w-3xl text-base md:text-lg text-midnight/70">
            Tout est question de vitesse. Nos shapes Windsurf combinent stabilité directionnelle et accélération instantanée
            pour vous accompagner du bord aux runs chronométrés. Utilisez les filtres ci-dessous pour affiner la sélection.
          </p>
        </div>

        <details class="w-full max-w-4xl rounded-3xl border border-midnight/5 bg-white/60">
          <summary class="group flex w-fit items-center gap-2 cursor-pointer rounded-full border border-transparent bg-white/80 px-5 py-2 text-xs uppercase tracking-[0.35em] text-midnight/60 transition-colors duration-200 list-none">
            <span class="font-semibold text-midnight/70">Filtre</span>
          </summary>
          <div class="px-6 pb-6 pt-4 grid gap-6 md:grid-cols-3">
            {facets.map((facet) => (
              <div class="space-y-4" aria-label={`Filtre ${facet.label}`}>
                <p class="text-xs uppercase tracking-[0.3em] text-midnight/60">{facet.label}</p>
                <ul class="space-y-2 text-sm text-midnight/80">
                  {facet.options.map((option) => (
                    <li class="flex items-center gap-3">
                      <input type="checkbox" id={`${facet.label}-${option}`} name={facet.label} value={option} class="h-4 w-4 rounded border-midnight/30 text-midnight focus:ring-midnight" />
                      <label for={`${facet.label}-${option}`}>{option}</label>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </details>

        <div class="flex flex-col items-center gap-8 sm:gap-10 lg:flex-row lg:flex-wrap lg:items-stretch lg:justify-center lg:gap-8">
          {boards.map((board) => (
            <article class="group flex w-full max-w-[520px] flex-col overflow-hidden rounded-[2.75rem] bg-white shadow-[0_24px_60px_rgba(15,23,42,0.15)] transition-transform duration-300 hover:-translate-y-2 sm:max-w-[600px] mx-auto lg:mx-0 lg:max-w-[360px] lg:rounded-[2.5rem]">
              <div class="relative w-full aspect-[3/4] overflow-hidden bg-gradient-to-b from-midnight/10 via-midnight/5 to-white lg:aspect-[4/5]">
                <img src={board.image} alt={board.name} loading="lazy" class="absolute inset-0 h-full w-full object-contain transition-transform duration-500 group-hover:scale-105" />
              </div>
              <div class="space-y-3 px-6 py-6 text-left">
                <h3 class="text-xl font-semibold text-midnight">{board.name}</h3>
                <p class="text-sm text-midnight/70">{board.description}</p>
                <div class="flex items-center justify-between text-sm">
                  <span class="font-semibold text-midnight">{board.price}</span>
                  <span class="text-midnight/60">{board.volume}</span>
                </div>
                <a href={withBase(`/produit/${board.slug}`)} class="mt-4 inline-flex items-center justify-center rounded-full border border-midnight/20 px-4 py-2 text-xs uppercase tracking-[0.3em] text-midnight/70 transition-colors duration-200 hover:border-midnight hover:text-midnight">
                  Voir la fiche
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>
