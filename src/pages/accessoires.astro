---
import Layout from '../layouts/Layout.astro';
import { withBase } from '../utils/url';

const hero = {
  title: 'Accessoires',
  subtitle: 'Optimisez chaque session avec les pads, housses et voileries AHD conçus pour durer.',
  image: withBase('/images/category-%20accesoires.png')
};

const facets = [
  {
    label: 'Usage',
    options: ['Freeride', 'Slalom', 'Foil', 'Voyage']
  },
  {
    label: 'Compatibilité',
    options: ['Windsurf', 'Wingfoil', 'Multi-support']
  },
  {
    label: 'Budget',
    options: ['< 150 €', '150 € - 300 €', '> 300 €']
  }
];

const accessories = [
  {
    name: 'Pad Signature',
    description: 'Grip carbone texturé, découpe CNC et absorption optimisée pour les appuis agressifs.',
    price: '189 €',
    image: withBase('/images/ahd-experience.webp'),
    tag: 'Confort'
  },
  {
    name: 'Housse Travel Pro',
    description: 'Protection tri-couche et renforts d’étrave pour transporter boards et foils sans compromis.',
    price: '229 €',
    image: withBase('/images/ahd-history.png'),
    tag: 'Transport'
  },
  {
    name: 'Kit Foil Care',
    description: 'Entretien complet avec cires, clés dynamométriques et protections d’ailes dédiées.',
    price: '129 €',
    image: withBase('/images/ahd-lab.jpg'),
    tag: 'Maintenance'
  },
  {
    name: 'Voile Apex 5.4',
    description: 'Profil stable, monofilm renforcé et manœuvres fluides pour les sessions freeride engagées.',
    price: '629 €',
    image: withBase('/images/ahd-apex.jpg'),
    tag: 'Performance'
  }
];
---

<Layout title="AHD Paddle | Accessoires">
  <main class="space-y-24 pb-24">
    <section
      class="relative flex min-h-[70vh] items-center justify-center overflow-hidden text-center"
      data-bg="#ffffff"
      data-nav="dark"
      style={`background-image: url('${hero.image}'); background-size: cover; background-position: center;`}
    >
      <div class="absolute inset-0 bg-white/12"></div>
      <div class="absolute inset-0 bg-gradient-to-b from-white/10 via-transparent to-midnight/65"></div>
      <div class="relative z-10 max-w-2xl space-y-6 px-6 hero-copy-shadow">
        <p class="text-sm uppercase tracking-[0.4em] text-foam/70">Collection 2026</p>
        <h1 class="text-4xl md:text-6xl font-black text-white">{hero.title}</h1>
        <p class="text-base md:text-lg text-foam/80">{hero.subtitle}</p>
      </div>
    </section>

    <section class="bg-white" data-bg="#ffffff" data-nav="light">
      <div class="container space-y-10 text-midnight">
        <div class="space-y-6 text-center">
          <h2 class="section-title text-3xl md:text-4xl">Équipements essentiels</h2>
          <p class="mx-auto max-w-3xl text-base md:text-lg text-midnight/70">
            Combinez les accessoires AHD pour prolonger la durée de vie de vos boards, sécuriser vos transports et optimiser votre confort de navigation.
          </p>
        </div>

        <details class="w-full max-w-4xl rounded-3xl border border-midnight/5 bg-white/60">
          <summary class="group flex w-fit items-center gap-2 cursor-pointer rounded-full border border-transparent bg-white/80 px-5 py-2 text-xs uppercase tracking-[0.35em] text-midnight/60 transition-colors duration-200 list-none">
            <span class="font-semibold text-midnight/70">Filtre</span>
          </summary>
          <div class="px-6 pb-6 pt-4 grid gap-6 md:grid-cols-3">
            {facets.map((facet) => (
              <div class="space-y-4" aria-label={`Filtre ${facet.label}`}>
                <p class="text-xs uppercase tracking-[0.3em] text-midnight/60">{facet.label}</p>
                <ul class="space-y-2 text-sm text-midnight/80">
                  {facet.options.map((option) => (
                    <li class="flex items-center gap-3">
                      <input type="checkbox" id={`${facet.label}-${option}`} name={facet.label} value={option} class="h-4 w-4 rounded border-midnight/30 text-midnight focus:ring-midnight" />
                      <label for={`${facet.label}-${option}`}>{option}</label>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </details>

        <div class="flex flex-col items-center gap-8 sm:gap-10 lg:flex-row lg:flex-wrap lg:items-stretch lg:justify-center lg:gap-8">
          {accessories.map((item) => (
            <article class="group flex w-full max-w-[520px] flex-col overflow-hidden rounded-[2.75rem] bg-white shadow-[0_24px_60px_rgba(15,23,42,0.15)] transition-transform duration-300 hover:-translate-y-2 sm:max-w-[600px] mx-auto lg:mx-0 lg:max-w-[360px] lg:rounded-[2.5rem]">
              <div class="relative w-full aspect-[3/4] overflow-hidden bg-gradient-to-b from-midnight/10 via-midnight/5 to-white lg:aspect-[4/5]">
                <img src={item.image} alt={item.name} loading="lazy" class="absolute inset-0 h-full w-full object-cover transition-transform duration-500 group-hover:scale-105" />
              </div>
              <div class="space-y-3 px-6 py-6 text-left">
                <div class="flex items-center justify-between text-xs uppercase tracking-[0.3em] text-midnight/60">
                  <span>{item.tag}</span>
                  <span>{item.price}</span>
                </div>
                <h3 class="text-xl font-semibold text-midnight">{item.name}</h3>
                <p class="text-sm text-midnight/70">{item.description}</p>
                <button class="mt-4 inline-flex items-center justify-center rounded-full border border-midnight/20 px-4 py-2 text-xs uppercase tracking-[0.3em] text-midnight/70 transition-colors duration-200 hover:border-midnight hover:text-midnight">
                  Voir le détail
                </button>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>
