---
import Layout from '../layouts/Layout.astro';

import HeroSection from '../components/home/HeroSection.astro';
import CategoriesSection from '../components/home/CategoriesSection.astro';
import CollectionSection from '../components/home/CollectionSection.astro';
import InnovationSection from '../components/home/InnovationSection.astro';
import HistorySection from '../components/home/HistorySection.astro';
import ExperienceSection from '../components/home/ExperienceSection.astro';
import FadeDivider from '../components/home/FadeDivider.astro';

import { categories, lineup, experiences } from '../data/home';

// Données éditoriales séparées pour simplifier la lecture du squelette de page
---

<Layout title="AHD Paddle | Lignes inspirées du yachting de performance">
  <main class="relative overflow-x-hidden">
    <HeroSection ctaLabel="Découvrir la gamme 2026" />

    <CategoriesSection categories={categories} />

    <CollectionSection lineup={lineup} />

    <InnovationSection />

    <FadeDivider />

    <HistorySection />

    <FadeDivider variant="light-to-dark" />

    <ExperienceSection experiences={experiences} />
  </main>
</Layout>

