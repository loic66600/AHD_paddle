---
import { withBase } from '../../utils/url';

const innovationVideo = withBase('/media/ahd-innovation.mp4');
---

<!-- Bandeau innovation conservant la vidéo laboratoire -->
<section
  id="innovation"
  class="relative h-[42vh] min-h-[560px] overflow-hidden"
  aria-label="Laboratoire hydrodynamique AHD"
  data-bg="#3a37371c"
  data-nav="dark"
>
  <div class="absolute inset-0 -z-10">
    <video
      class="h-full w-full object-cover pointer-events-none"
      src={innovationVideo}
      autoplay
      loop
      muted
      playsinline
      preload="metadata"
    ></video>
  </div>

  <div class="absolute inset-0 bg-gradient-to-r from-midnight/60 via-midnight/40 to-midnight/60 -z-10"></div>

  <div class="relative z-10">
    <!-- Contenu additionnel à définir par la direction artistique -->
  </div>
</section>
